---
layout: none
---

{%- assign pwa = site.data.installs.pwa -%}

{
  "lang": "{{ pwa.language }}",
  "dir": "{{ pwa.lang_direction }}",
  "name": {{ pwa.name | smartify | jsonify }},
  "short_name": {{ pwa.short_name | smartify | jsonify }},
  "icons": [
    {
      "src": "{{ pwa.icons[192] }}",
      "sizes": "192x192",
      "type": "image\/png"
    },
    {
      "src": "{{ pwa.icons[512] }}",
      "type": "image/png",
      "sizes": "512x512"
    }
  ],
  "theme_color": "{{ pwa.theme_color }}",
  "background_color": "{{ pwa.background_color }}",
  "start_url": "{{ site.baseurl | default: "/" }}",
  "display": "standalone",
  "orientation": "natural"
}
