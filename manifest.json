---
layout: none
---

{%- assign pwa = site.data.notice.pwa -%}

{
  "lang": "{{ pwa.language }}",
  "dir": "{{ pwa.lang_direction }}",
  "name": {{ pwa.name | smartify | jsonify }},
  "short_name": {{ pwa.short_name | smartify | jsonify }},
  "theme_color": "{{ pwa.theme_color }}",
  "background_color": "{{ pwa.background_color }}",
  "homepage_url": "{{ site.url }}",
  "start_url": "/",
  "display": "standalone",
  "orientation": "natural",
  "icons": [
    {
      "src": "{{ pwa.icons['192'] | append: site.url }}",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "{{ pwa.icons['512'] | append: site.url }}",
      "type": "image/png",
      "sizes": "512x512"
    }
  ]
}
